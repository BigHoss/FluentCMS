@inherits BaseComponent
@using System.Resources;

<span class=@this.GetClasses() @attributes=@AdditionalAttributes>
    @IconContent
</span>

@code {
    [Inject(Key = "FluentCMS.Web.UI.Resources.Icons")]
    public required ResourceManager ResourceManager { get; set; }

    [Parameter]
    public IconDefinition Name { get; set; } = IconDefinition.Default;

    public MarkupString IconContent { get; set; } = default!;

    [Parameter]
    [CssProperty]
    public ColorEnum Color { get; set; } = ColorEnum.Default;

    [Parameter]
    [CssProperty]
    public SizeEnum Size { get; set; } = SizeEnum.Default;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        IconContent = (MarkupString)(ResourceManager.GetString(Name.IconName) ?? throw new Exception("Invalid Icon Name"));
    }
}