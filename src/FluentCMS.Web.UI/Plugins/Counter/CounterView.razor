<hr />
<h1>Counter</h1>
@Plugin?.Id
<h1>Counter</h1>
<hr />
<p role="status">Current count: @currentCount</p>
<Counter @onclick="IncrementCount">Click me</Counter>

@code {
    private int currentCount = 0;

    [Parameter]
    public PluginResponse? Plugin { get; set; } = default!;

    private void IncrementCount()
    {
        currentCount++;
    }
}
